{
  "manifest_version": 3,
  "name": "StreamMatey",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://api.twitch.tv/*",
    "https://api-inference.huggingface.co/*",
    "https://api.netlify.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "sentiment.html", "twitchChatHandler.js"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    },
    {
      "resources": ["popup.css", "sentiment.css"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    },
    {
      "resources": ["icons/icon16.png"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    },
    {
      "resources": ["icons/icon48.png"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    },
    {
      "resources": ["icons/icon128.png"],
      "matches": ["<all_urls>"],
      "use_dynamic_url":       false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+Y"
      }
    }
  },
  "options_ui": {
    "page": "popup.html",
    "open_in_tab": true
  }
}

