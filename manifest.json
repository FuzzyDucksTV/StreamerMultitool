{
  "manifest_version": 3,
  "name": "Twitch Chat Sentiment Analysis",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://api.twitch.tv/*",
    "https://api-inference.huggingface.co/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    },
    {
      "resources": ["popup.css"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    },
    {
      "resources": ["icons/icon16.png"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    },
    {
      "resources": ["icons/icon48.png"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    },
    {
      "resources": ["icons/icon128.png"],
      "matches": ["<all_urls>"],
      "use_dynamic_url": false
    }
     
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "oauth2": {
    "client_id": "0q1q1q1q1q1q1q1q1q1q1q1q1q1q1q1",
    "scopes": [
      "openid",
      "user:read:email"
    ]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+Y"
      }
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "popup.html"
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Twitch Chat Sentiment Analysis",
      "keyword": "twitch",
      "search_url": "https://www.twitch.tv/directory/game/Just%20Chatting",
      "favicon_url": "https://www.twitch.tv/favicon.ico",
      "encoding": "UTF-8",
      "is_default": true
    }
  }
}
